{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": ["error", 4],
        "eol-last": "off", 
        "padded-blocks": "off", 
        "quotes": "off", 
        "brace-style": "off"
    }
}
